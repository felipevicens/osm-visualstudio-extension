{
	"name": "opensource-mano-vs-extension",
	"displayName": "Opensource MANO Visual Studio Code Extension",
	"description": "OSM Descriptors Autocompletion and Linting extension",
	"version": "0.0.1",
	"publisher": "FelipeVicens",
	"repository": {
		"type": "git",
		"url": "https://github.com/felipevicens/osm-visualstudio-extension"
	},
	"homepage": "https://github.com/felipevicens/osm-visualstudio-extension/blob/master/README.md",
	"license": "Apache 2.0",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Linters", "Formatters", "Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
	    "yamlValidation": [
            {
                "fileMatch": "*nsd.yaml*",
                "url": "http://osm-download.etsi.org/ftp/osm-doc/nsd.json"
            },
            {
                "fileMatch": "*vnfd.yaml*",
                "url": "http://osm-download.etsi.org/ftp/osm-doc/vnfd.json"
            },
            {
                "fileMatch": "*nst.yaml*",
                "url": "http://osm-download.etsi.org/ftp/osm-doc/nst.json"
            }
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"extensionPack": [
        "redhat.vscode-yaml"
    ]
}